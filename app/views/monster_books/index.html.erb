<h1 class="text-center"><%= current_user.monster.name.capitalize %>'s Muncies! ğŸ“•ğŸ“—ğŸ“˜ğŸ“™ğŸ“š </h1>
<div class="books-container row m-3 g-1">
  <% @monster_books.each do |book| %>
    <div class="col">
      <%= link_to book_path(book.book) do %>
        <div class="clickable">
          <div class="remove-btn">
          <div class="card-small text-center">
            <%= book.book.image.attached? ? (cl_image_tag book.book.image.key, class: "img-small") : (image_tag "placeholder.png", class: "img-small") %>
            <p><%= book.book.title %></p>
            <p><%= book.book.author %></p>
            <p><%= book.book.rating %></p>
            <p><%= book.book.genre.capitalize if book.book.genre %></p>
            <p><%= book.book.suitable_for.capitalize if book.book.suitable_for %> Children </p>
            <p><%= book.reading_status %></p>
            <p><%= book.read_date %></p>
            <p><%= book.notes %></p>
          </div>
            <%= link_to "Delete", monster_monster_book_path(id: book.id, monster_id: current_user.monster.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
