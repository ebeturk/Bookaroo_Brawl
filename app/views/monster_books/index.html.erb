<div class="books-container row m-3 g-1">
  <% @monster_books.each do |book| %>
  <%= book %>
    <div class="col">
      <%= link_to book_path(book) do %>
        <div class="clickable">
          <div class="card-small text-center">
            <%= book.book.image.attached? ? (cl_image_tag book.image.key, class: "img-small") : (image_tag "placeholder.png") %>
            <p><%= book.book.title %></p>
            <p><%= book.book.author %></p>
            <p><%= book.book.rating %></p>
            <p><%= book.book.genre.capitalize if book.genre %></p>
            <p><%= book.book.suitable_for.capitalize if book.suitable_for %> Children </p>
            <p><%= book.reading_status %></p>
            <p><%= book.reading_date %></p>
            <p><%= book.notes %></p>
          </div>
          <%= link_to "Delete", book_path(book), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
