  <% @monsters.each do |monster| %>
    <%= link_to monster_path(monster) do %>
      <div class="clickable">
        <div class="card-small text-center">
          <%= monster.images.attached? ? (cl_image_tag monster.images.first.key, class: "img-small") : (image_tag "placeholder.png") %>
          <p><%= monster.name %></p>
          <p><%= monster.description %></p>
        </div>
          <%= link_to "Delete", monster_path(monster), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </div>
    <% end %>
  <% end %>
