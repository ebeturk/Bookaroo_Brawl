<h1>Monsters#index</h1>
<p>
  <% @monsters.each do |monster| %>
    <div class="card-small">
      <p><%= monster.name %></p>
      <p><%= monster.description %></p>
    </div>
    <%= link_to "Delete", monster_path(monster), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  <% end %>
</p>
