<div class="container p-5">
  <div class="row justify-content-center text-center">
    <div class="col-lg-6">
      <h1 class="book-title"><%= @book.title %></h1>
      <p><%= @book.description %></p>
      <p><%= @book.genre %></p>
      <p><%= @book.rating %></p>
      <p><%= @book.suitable_for %></p>
      <%= cl_image_tag @book.image.key, class:"book-cover" %>
      <% if @book.monsters.include?(current_user.monster) %>
      <%= link_to raw("Edit this Book?"), edit_monster_book_path(@monster_book), class: "btn btn-gamy" %>
      <% end %>
    </div>
    <div class="nav-links">
     <%= button_to "Feed Your Monster", monster_monster_books_path(monster_id: current_user.monster.id, book_id: @book.id), method: :post %>
      <%= link_to "Back to Books", books_path, class: "btn-nav" %>
    </div>
  </div>
</div>
